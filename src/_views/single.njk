{% extends "base.njk" %}

{% block content %}
    <div class="single">
        {% block single_content %}
            {{ content | safe }}
        {% endblock %}
    </div>
{% endblock %}

{% block foot %}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
           [...document.querySelectorAll('.snippet')].forEach(s => {
               const hasOverflow = s.scrollWidth > s.clientWidth;
               s.classList.toggle('has-overflow', hasOverflow);
           });
        });
    </script>
{% endblock %}
